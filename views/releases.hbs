<h1>Vinyl Database</h1>
<h2>Releases</h2>
<div class="homepageDescription">
    <p>Gabe Happ-Shine Peter Battisti Group 95</p>
</div>
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            
            <th>Release ID</th>
            <th>Album ID</th>
            <th>Record Label</th>
            <th>Release Date</th>
            <th>Price</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>

      <tbody>
        {{! For each row, print the id, fname, lname, homeworld and age }}
        {{#each releases}}
        <tr>
            <td>{{this.releaseID}}</td>
            <td>{{this.albumID}}</td>
            <td>{{this.recordLabel}}</td>
            <td>{{this.releaseDate}}</td>
            <td>{{this.price}}</td>
             <td>{{this.title}}</td>
            <form id='delete_release_form' method='POST' action="/releases/delete">
                <input type='hidden' name='delete_release_id' value='{{this.releaseID}}' />
                <input type='hidden' name='delete_release_name' value='{{this.recordLabel}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>

            
        </tr>
        {{/each}}
    </tbody>
</table>

{{! CREATE form }}
<h2>Create a Release</h2>
<form class='cuForm' id='create_release_form' method='POST' action="/releases/create">
    <label for='create_release_label'>Label: </label>
    <input type='text' name='create_release_label' id='create_release_label' required />

    <label for='create_release_date'>Date: </label>
    <input type='date' name='create_release_date' id='create_release_date' required />

   <label for="create_release_price">Price:</label>
<input
    type="number"
    name="create_release_price"
    id="create_release_price"
    step="0.01"
    min="0"
    required
/>
<label for='add_album_to_release_id'>Album: </label>
    <select name='add_album_to_release_id' id='add_album_to_release_id' required>
        <option value='' disabled selected>Select an Album</option>
        {{#each albums}}
        <option value='{{this.albumID}}' required>
            {{this.id}}
            -
            {{this.title}}
            
            
        </option>
        {{/each}}
    </select>

   <input type='submit' /> 
</form>
</form>
{{! UPDATE form }}
<h2>Update a Release</h2>
<form class='cuForm' id='update_release_form' method='POST' action="/releases/update">
    <label for='update_release_id'>Release to Update: </label>
    <select name='update_release_id' id='update_release_id' required>
        <option value='' disabled selected>Select a Release</option>
        {{#each releases}}
        <option value='{{this.releaseID}}' required>
            {{this.id}}
            -
            {{this.releaseID}}
            
            
        </option>
        {{/each}}
    </select>

    <label for='update_album_id'>Album: </label>
    <select name='update_album_id' id='update_album_id' required>
        <option value='' disabled selected>Select an Album</option>
        {{#each albums}}
        <option value='{{this.albumID}}' required>
            {{this.albumID}}
            -
            {{this.title}}
            
            
        </option>
        {{/each}}
    </select>

    <label for="update_release_label">Label:</label>
    <input type="text" name="update_release_label" id="update_release_label" required />

    <label for="update_release_date">New Date:</label>
    <input type="date" name="update_release_date" id="update_release_date" required />

    <label for="update_release_price">New Price:</label>
    <input type="number" name="update_release_price" id="update_release_price" step="0.01" min="0" required />


    <input type='submit' />
</form>
